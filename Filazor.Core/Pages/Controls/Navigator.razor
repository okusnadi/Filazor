    /// </summary>
    /// <param name="path">selected node Path</param>
    private async void MoveToRecent(string path)
    {
        isRecent = true;
        recentLocationShow = null;

        await MoveToRecentCallback.InvokeAsync(path);
    }

    private async void Back()
    {
        isBacking = true;
        selectedDirectoryIndex = selectedDirectoryIndex + 1;

        await BackAndForwardCallback.InvokeAsync(selectedDirectoryList[selectedDirectoryIndex]);
    }

    private async void Forward()
    {
        isForwarding = true;
        selectedDirectoryIndex = selectedDirectoryIndex - 1;

